# ============================================
# Environment Variables for Railway Deployment
# ============================================

# Database Configuration
# Railway MySQL format: mysql://user:password@host:port/database
# Sẽ được tự động cung cấp bởi Railway khi add MySQL service
DATABASE_URL=mysql://root:password@localhost:3306/price_insight

# Alternative: Separate database credentials (nếu không dùng DATABASE_URL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=price_insight
DB_USER=root
DB_PASSWORD=

# Server Port
# Railway tự động gán PORT, không cần config thủ công
# Local default: 8080
PORT=8080

# Application Settings
JAVA_OPTS=-Xmx512m -Xms256m

# Optional: Connection Pool Settings
DB_POOL_MAX_SIZE=30
DB_POOL_MIN_IDLE=15
